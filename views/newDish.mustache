<html>
    <header>{{>header}}</header>
    <body>
        <div class="w3-top">
            <div class="w3-bar w3-white w3-padding w3-card" style="letter-spacing:4px;">
                <a href="/" class="w3-bar-item w3-button">Generic's Restaurant</a>
            </div>
        </div><hr><hr>

        <form method="POST" action="/newDish">
            <input type="text" id="name" name="name" placeholder="Name..." required><br>
            <input type="text" id="ingredients" name="ingredients" placeholder="Ingredients..." required><br>
            <input type="text" id="allergy_advice" name="allergy_advice" placeholder="Allergens..." required><br>
            <input type="number" id="price" name="price" placeholder="Price..." required><br>
            <input type="text" id="type" name="type" placeholder="Type..." required><br>
            <input type="radio" id="available" name="available" value="true" required>
            <label for="available">Available</label>
            <input type="radio" id="unavailable" name="available" value="false" required>
            <label for="unavailable">Unavailable</label><br>
            <input type="submit" value="Submit">
        </form>
    </body>
</html>